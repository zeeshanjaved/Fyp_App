<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zeeshanjaved.fyp_app.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:weightSum="90">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="30">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="100">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgaboutus"
                    android:src="@drawable/aboutus"
                    android:minWidth="170dp"
                    android:minHeight="130dp"
                    android:layout_weight="20"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textaboutus"
                    android:text="About Us"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:layout_weight="80"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="100">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgfaqs"
                    android:src="@drawable/faqs"
                    android:minWidth="170dp"
                    android:minHeight="130dp"
                    android:layout_weight="20"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textfaqs"
                    android:text="FAQs"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:layout_weight="80"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="30">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="100">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgnews"
                    android:src="@drawable/news"
                    android:minWidth="170dp"
                    android:minHeight="130dp"
                    android:layout_weight="20"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textnews"
                    android:text="Latest News"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:layout_weight="80"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="100">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgcontact"
                    android:src="@drawable/contact"
                    android:minWidth="170dp"
                    android:minHeight="130dp"
                    android:layout_weight="20"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textcontact"
                    android:text="Contact Us"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:layout_weight="80"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="30">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="100">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgtrialtest"
                    android:src="@drawable/freetest"
                    android:minWidth="170dp"
                    android:minHeight="130dp"
                    android:layout_weight="20"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/texttrialtest"
                    android:text="Trial Test"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:layout_weight="80"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="100">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgpaidtest"
                    android:src="@drawable/paidtest"
                    android:minWidth="170dp"
                    android:minHeight="130dp"
                    android:layout_weight="20"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textpaidtest"
                    android:text="Registered Test"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:layout_weight="80"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
