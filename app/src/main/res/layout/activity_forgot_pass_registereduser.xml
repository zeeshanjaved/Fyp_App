<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zeeshanjaved.fyp_app.ForgotPassRegistereduserActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollviewregisterduser">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageexamprep"
                android:layout_width="300px"
                android:layout_height="320px"
                android:layout_gravity="center"
                android:layout_marginTop="20pt"
                app:srcCompat="@drawable/examprep" />

            <TextView
                android:id="@+id/textvalidusername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="@string/text_entervalidusername"
                android:textSize="15dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="25dp">

                <ImageView
                    android:id="@+id/imageforgotmain"
                    android:layout_width="50dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="10pt"
                    android:src="@drawable/username" />


                <EditText
                    android:id="@+id/editforgotuser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="50dp"
                    android:hint="Enter Registered Username "
                    android:inputType="text"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnfornext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/my_button_bg"
                    android:gravity="center"
                    android:text="NEXT"
                    android:textColor="@color/btntextcolor" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
